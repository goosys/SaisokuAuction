<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <%= stylesheet '/css/bootstrap.min.css' %>
  <%= stylesheet '/css/style.css' %>
  <%= javascript 'http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js' %>
  <%= javascript '/js/script.js' %>
</head>
<body id="<%= 'site-'.(($self->stash('site'))? $self->stash('site')->basename: 'top') %>">

<header id="header">
<div class="container">
<div class="row">
<div class="span5">
<h1><a href="/">Saisoku-Auction</a></h1>
</div>
<div class="span3">
</div>
<div class="span3">
</div>
</div>
</div>
</header>

<div class="container">
<div class="row">
<section class="span12">
<% if ( $self->stash('debug') ){ %><div class="alert"><strong>Debugging!</strong> <%= $self->stash('debug') %></div><% } %>
<%= content %>
</section>
</div>
</div>

<footer id="footer">
<div class="container">
<aside class="row" id="footer-widgets">
<div class="span4 offset1">
<%= include 'widgets/sites' %>
</div>
<div class="span3">
<%= include 'widgets/categories' %>
</div>
<div class="span3">
<%= include 'widgets/monthly_entries' %>
</div>
</aside>
</div>
</footer>

</body>
</html>
